        <!--<div class="locality"><strong>Verilen Tarih:</strong> @verilentarih.ToShortDateString()</div>
            <div id="client-postcode"><span class="region"> </span> <span class="postal-code"><strong>Alınan Tarih:</strong> @DateTime.Now.ToShortDateString()</span></div>
        </div>
    </div>-->
        <!-- #client-details vcard -->
        <!-- invoice-amount -->
        <!-- invoice-other -->
        <div id="invoice-other">
            <h2>Ünvanı: </h2>
            <br />

            <h2>Alan Kişi:</h2>
            <br />
            <h2>İmza</h2>
        </div>


    </div>

    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
</body>
</html>



















