@model URUNTAKIPMVC.Models.MultiView
@{
    ViewBag.Title = "YeniKullaniciEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    var birims = 1;
    $(document).ready(function () {
        $("#birim").change(function () {
            birims = $(this).children(":selected").attr("value");
        });
        $("#eklekullanici").click(function () {
            var kul = {
                AdiSoyadi: $("#name").val(),
                BirimID: birims
            }
            $.ajax({
                url: "/kullanici/yenikullaniciadd",
                type: "Post",
                datatype: "json",
                data: kul,
                success: function (data) {
                    if (data == true) {
                        window.location.href = "/kullanici/kullaniciList";

                    }
                    else {
                        alert("Boş yerleri doldurarak tekrar deneyiniz");
                    }
                }
            })
        })
    })
</script>
<div id="kuleklemodali" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true" style="display: none;">

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Uyarı!</h4>
        </div>
        <div class="modal-body">
            <p> Kullanıcıyı Eklemek istediğinize emin misiniz? </p>
        </div>
        <div class="modal-footer">
            <button class="btn default" data-dismiss="modal" aria-hidden="true">Hayır</button>
            <button id="eklekullanici" data-dismiss="modal" class="btn yellow">Evet</button>
        </div>
    </div>
</div>
<div class="portlet light bordered" style="margin-left: 10%; margin-right: 30%; ">
    <div class="portlet-title">
        <div class="caption font-green">
            <i class="icon-pin font-green"></i>
            <span class="caption-subject bold uppercase"> Yeni Ürün Ekleme</span>
        </div>

    </div>
    <div class="portlet-body form">
        <form role="form">
            <div class="form-body">
                <div class="form-group form-md-line-input">
                    <input type="text" class="form-control" id="name">
                    <label for="marka">Kullanıcı İsim Soyisim</label>
                    <span class="help-block">Kullanıcı Adını ve Soyadını Yazınız</span>
                </div>
                <div class="form-group form-md-line-input">
                    <select class="form-control" id="birim">
                        @foreach (var item in Model.BirimList)
                        {
                            <option selected value="@item.ID">@item.BirimAdı</option>
                        }
                    </select>
                    <label for="form_control_1">Kullanıcı Birimi</label>
                </div><div class="row">
                    <div class="col-lg-12">
                        <div class="form-actions noborder">
                            <a href="#kuleklemodali" data-toggle="modal" class="btn blue">Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

