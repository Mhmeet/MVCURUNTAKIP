@model URUNTAKIPMVC.Models.MultiView
@{
    ViewBag.Title = "kullaniciUrunlerr";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var btntemp = 0;
    var id = 0;
    var isim = "";
    var birim = "";
    foreach (var item in Model.KullaniciList)
    {

        id = item.ID;
        isim = item.AdiSoyadi;
        birim = item.Birim.BirimAdı;
    }
}

<script>
    var btntemp = 0;
    $(document).ready(function () {
        $("#yazdirilmis").click(function () {
            btntemp = 1;
            $("#PDFalinmis").removeClass("display-none");
            $("#tumu").addClass("display-none");
            $("#PDFalinmamis").addClass("display-none");
        });

        $("#yazdirilmamis").click(function () {
            btntemp = 0;
            $("#PDFalinmamis").removeClass("display-none");
            $("#PDFalinmis").addClass("display-none");
            $("#tumu").addClass("display-none");
        });

        $("#btntumu").click(function () {
            btntemp = 0;
            $("#tumu").removeClass("display-none");
            $("#PDFalinmamis").addClass("display-none");
            $("#PDFalinmis").addClass("display-none");
        });
    });
</script>
<script>
    function PDFal(idd) {
        var id = idd;
        $.ajax({
            url: "/kullanici/yazdir",
            type: "Post",
            datatype: "json",
            data: { id: id, tmp: btntemp },
            success: function (data) {
                window.print();
            }
        })
    }
</script>
<div class="invoice">
    <div class="row invoice-logo">
        <div class="col-xs-6 invoice-logo-space">
            <img src="~/Content/theme/WhatsApp_Image_2022-03-29_at_1.16.40_PM-removebg-preview.png" class="img-responsive" width="50%" alt="">
        </div>
        <div class="col-xs-6">
            <p class="text-center">
                <strong>@DateTime.Now</strong>
            </p>
            <p class="text-center">
                <strong>Ankara Oksitem Otomasyon</strong>
            </p>
            <p class="text-center"> <strong>kont. sis. end. yaz. ltd. şti.</strong> </p>
        </div>
    </div>
    <hr style="height: 10px; color:black" />
    <div class="row">
        <div class="col-xs-6">
            <h3><strong>Talep Eden Kişi</strong> </h3>
            <ul class="list-unstyled">
                <li>
                    <strong>İsim Soyisim:</strong> @isim
                </li>
                <li><strong>Birim:</strong> @birim </li>
                <li><strong>İmza: </strong></li>
            </ul>
        </div>


    </div>

    <div class="btn-toolbar hidden-print">
        <div class="btn-group btn-group-lg btn-group-solid margin-bottom-8">
            <button id="yazdirilmis" type="button" class="btn red">Yazdırılanlar</button>
            <button id="yazdirilmamis" type="button" class="btn green">Yazdırılmayanlar</button>
            <button id="btntumu" type="button" class="btn blue">Tümü</button>
        </div>
    </div>

    <div class="row display-none" id="PDFalinmis">
        <div class="col-xs-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr style="">
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Markası</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Modeli</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Kategorisi</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Verilen Tarih</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.UrunList)
                    {
                        if (item.PDF == true)
                        {
                            <tr>
                                <td><strong>@item.Marka</strong>  </td>
                                <td><strong>@item.Model</strong>  </td>
                                <td><strong>@item.Kategori.KategoriAdı</strong>  </td>
                                <td><strong>@item.VerilenTarih.ToShortDateString()</strong></td>
                            </tr>
                        }

                    }
                    <tr>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row display-none" id="PDFalinmamis">
        <div class="col-xs-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr style="">
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Markası</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Modeli</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Kategorisi</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Verilen Tarih</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.UrunList)
                    {
                        if (item.PDF == false)
                        {
                            <tr>
                                <td>@item.Marka</td>
                                <td>@item.Model</td>
                                <td>@item.Kategori.KategoriAdı</td>
                                <td>@item.VerilenTarih.ToShortDateString()</td>
                            </tr>
                        }

                    }
                    <tr>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row" id="tumu">
        <div class="col-xs-12">
            <table class="table table-striped table-hover">
                <thead>
                    <tr style="">
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Markası</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Modeli</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Ürünün Kategorisi</th>
                        <th style=" text-align: left; white-space: nowrap; padding: 2px 4px 0 5px; font-weight: bold; background: #FFF; border-bottom: solid 1px #444;">Verilen Tarih</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model.UrunList)
                    {


                        <tr>
                            <td>@item.Marka</td>
                            <td>@item.Model</td>
                            <td>@item.Kategori.KategoriAdı</td>
                            <td>@item.VerilenTarih.ToShortDateString()</td>
                        </tr>


                    }
                    <tr>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">

        <div class="col-xs-8 invoice-block">

            <br>
            <a class="btn btn-lg blue hidden-print margin-bottom-5" onclick="PDFal(@id)" @*onclick="javascript:window.print();"*@>
                Print
                <i class="fa fa-print"></i>
            </a>
            <a class="btn btn-lg green hidden-print margin-bottom-5">
                Submit Your Invoice
                <i class="fa fa-check"></i>
            </a>
        </div>
    </div>
</div>


